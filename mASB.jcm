/*
    Skateboard Assembly MAS with GUI Visualization
    
    Like the House building example, this visualizes skateboard assembly in real-time.
    
    Place files in your JaCaMo project:
    - src/agt/          -> all .asl files
    - src/env/tools/    -> OrderTupleSpace.java, AuctionArtifact.java, etc.
    - src/env/simulator/ -> Skateboard.java, Board.java, Trunks.java, etc.
*/

mas skateboard_assembly {

    agent ca1: customer_agent.asl
    
    agent aa1: assembly_agent.asl
    
    agent sa1: sa1.asl
    agent sa2: sa2.asl
    agent sa3: sa3.asl
    
    // Trunk workstations
    agent wa1_trunk: workstation_agent.asl {
        beliefs: workstation_id(wa1_trunk)
                 workstation_type(trunk)
                 energy_consumption(15)
                 execution_time(20)
    }
    agent wa2_trunk: workstation_agent.asl {
        beliefs: workstation_id(wa2_trunk)
                 workstation_type(trunk)
                 energy_consumption(12)
                 execution_time(25)
    }
    
    // Wheels workstations
    agent wa1_wheels: workstation_agent.asl {
        beliefs: workstation_id(wa1_wheels)
                 workstation_type(wheels)
                 energy_consumption(10)
                 execution_time(15)
    }
    agent wa2_wheels: workstation_agent.asl {
        beliefs: workstation_id(wa2_wheels)
                 workstation_type(wheels)
                 energy_consumption(8)
                 execution_time(18)
    }
    
    // Rails workstations
    agent wa1_rails: workstation_agent.asl {
        beliefs: workstation_id(wa1_rails)
                 workstation_type(rails)
                 energy_consumption(18)
                 execution_time(22)
    }
    agent wa2_rails: workstation_agent.asl {
        beliefs: workstation_id(wa2_rails)
                 workstation_type(rails)
                 energy_consumption(20)
                 execution_time(20)
    }
    
    // Connectivity workstation
    agent wa1_connectivity: workstation_agent.asl {
        beliefs: workstation_id(wa1_connectivity)
                 workstation_type(connectivity)
                 energy_consumption(25)
                 execution_time(30)
    }
    
    // Quality control workstations
    agent wa1_quality: workstation_agent.asl {
        beliefs: workstation_id(wa1_quality)
                 workstation_type(quality)
                 energy_consumption(5)
                 execution_time(10)
    }
    agent wa2_quality: workstation_agent.asl {
        beliefs: workstation_id(wa2_quality)
                 workstation_type(quality)
                 energy_consumption(7)
                 execution_time(12)
    }
}
